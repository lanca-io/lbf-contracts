{
    "name": "@lanca/lbf-contracts",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "bugs": "security@lanca.io",
    "homepage": "https://lanca.io",
    "description": "Lanca Bridging Framework Contracts. If you discover any security vulnerabilities, report them responsibly to security@lanca.io. Thank you!",
    "engines": {
        "node": "22"
    },
    "packageManager": "yarn@1.22.22",
    "scripts": {
        "chain": "hardhat node --network hardhat --no-deploy",
        "fork": "ETHEREUM_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
        "compile": "hardhat compile",
        "test": "REPORT_GAS=true hardhat test --network localhost",
        "test:rebalancer": "bun ./test/rebalancer/test.ts",
        "test:keeper": "bun ./test/keeper/test.ts",
        "format": "npm run format:ts && npm run format:sol",
        "lint": "npm run lint:ts && npm run lint:sol",
        "lint:ts": "eslint --config .eslint.config.mjs",
        "lint:sol": "solhint --config .solhint.json ./contracts/*.sol ./contracts/**/*.sol",
        "format:ts": "prettier --config .prettierrc.json --write \"**/*.{ts,json}\"",
        "format:sol": "prettier --config .prettierrc.json --write \"**/*.sol\"",
        "clean:hardhat": "rm -rf ./artifacts ./cache ./coverage ./typechain-types ./deployments",
        "clean:forge": "forge clean",
        "clean": "npm run clean:hardhat && npm run clean:forge",
        "build:messageReport": "bun build ./clf/src/messageReport/test.ts --outfile ./clf/dist/messageReport.min.js --target node",
        "build:operatorRegistration": "bun build ./clf/src/operatorRegistration/index.ts --outfile ./ clf/dist/operatorRegistration.min.js --target node",
        "size-contracts": "hardhat size-contracts",
        "check-updates": "npx npm-check-updates",
        "prepare": "husky",
        "operator-setup": "bun test/operator/testOperator.ts",
        "rebuild": "yarn clean && yarn compile",
        "update:stablecoin": "yarn cache clean @lanca/stablecoin-evm && yarn upgrade @lanca/stablecoin-evm",
        "update:v2-contracts": "yarn cache clean @concero/v2-contracts && yarn upgrade @concero/v2-contracts",
        "update:rpcs": "yarn cache clean @concero/rpcs && yarn upgrade @concero/rpcs",
        "upgrade:contract-utils": "yarn cache clean @concero/contract-utils && yarn upgrade @concero/contract-utils",
        "update:all": "yarn cache clean && yarn upgrade"
    },
    "devDependencies": {
        "@chainlink/env-enc": "1.0.5",
        "@chainlink/solhint-plugin-chainlink-solidity": "1.0.1",
        "@concero/contract-utils": "https://github.com/concero/contract-utils#feature/v3/export-generic-deploy",
        "@concero/rpcs": "github:concero/rpcs",
        "@concero/v2-contracts": "github:concero/messaging-contracts-v2#feature/v3/dev",
        "@concero/v2-networks": "github:concero/v2-networks",
        "@lanca/stablecoin-evm": "github:lanca-io/lcb-stablecoin-evm",
        "@nomicfoundation/hardhat-chai-matchers": "2.1.0",
        "@nomicfoundation/hardhat-ethers": "3.1.0",
        "@nomicfoundation/hardhat-network-helpers": "1.1.0",
        "@nomicfoundation/hardhat-verify": "2.1.0",
        "@nomicfoundation/hardhat-viem": "2.1.0",
        "@tenderly/api-client": "1.1.0",
        "@tenderly/hardhat-tenderly": "2.5.2",
        "@trivago/prettier-plugin-sort-imports": "5.2.2",
        "@typechain/ethers-v6": "0.5.1",
        "@typechain/hardhat": "9.1.0",
        "@types/mocha": "10.0.10",
        "@types/prettier": "3.0.0",
        "@typescript-eslint/eslint-plugin": "8.38.0",
        "@typescript-eslint/parser": "8.38.0",
        "chai": "5.2.1",
        "dotenv": "17.2.0",
        "esbuild": "0.25.8",
        "eslint": "9.31.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.3",
        "ethers": "6.15.0",
        "ethers-v5": "npm:ethers@6.15.0",
        "forge-std": "https://github.com/foundry-rs/forge-std.git",
        "hardhat": "2.26.1",
        "hardhat-contract-sizer": "2.10.0",
        "hardhat-deploy": "1.0.4",
        "hardhat-gas-reporter": "2.3.0",
        "husky": "9.1.7",
        "mocha": "11.7.1",
        "prettier": "3.6.2",
        "prettier-plugin-solidity": "2.1.0",
        "solady": "0.1.24",
        "solhint": "6.0.0",
        "solhint-community": "4.0.1",
        "solidity-bytes-utils": "0.8.4",
        "solidity-coverage": "0.8.16",
        "ts-node": "10.9.2",
        "typechain": "8.3.2",
        "typescript": "5.8.3",
        "viem": "2.33.0"
    },
    "dependencies": {
        "@openzeppelin/contracts": "5.4.0"
    }
}
